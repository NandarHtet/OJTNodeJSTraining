html
    head 
        title Login Page
    body 
        h2 Login Form
        if(message)
            h4 #{message}
        form(action="/login" method="POST") 
            input(type="text" name="id" placeholder="Enter Your ID..." style="display:block;margin-bottom:10px;padding:5px 5px;border-radius:5px;outline:none")
            input(type="password" name="password" placeholder="Enter Your Password" style="display:block;margin-bottom:10px;padding:5px 5px;border-radius:5px;outline:none")
            button(type="submit" style="background-color:blue;color:white;padding:5px;border-radius:10px;border:none") Login